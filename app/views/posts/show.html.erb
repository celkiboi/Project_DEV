<%= javascript_include_tag "comments", "data-turbo-track": "reload" %>

<h1><%= @post.title %></h1>

<p><strong><%= t('views.posts.show.short_description') %>:</strong> <%= @post.short_description %></p>
<p><strong><%= t('views.posts.show.content') %>:</strong> <%= raw @post.content %></p>
<p><strong><%= t('views.posts.show.publish_date') %>:</strong> <%= @post.publish_date.strftime('%d.%m.%Y') %></p>

<% if @post.image.present? %>
  <div>
    <%= image_tag @post.image.url %>
  </div>
<% end %>

<%= link_to t('views.posts.show.back_to_posts'), user_posts_path(current_user) %>

<% if current_user == @post.user %>
  <% unless @post.published? %>
    <%= form_for @post, url: publish_post_path(@post), method: :put do |f| %>
        <%= f.submit t('views.posts.show.publish'), class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>

<h2><%= t('views.posts.show.comments') %></h2>
<div id="comments">
  <%= render partial: 'comments/comment_list', locals: { comments: @post.comments } %>
</div>

<div id="comment-form">
  <% if user_signed_in? %>
    <textarea id="new-comment-content" placeholder="<%= t('views.posts.show.add_comment') %>"></textarea>
    <button id="submit-comment" data-post-id="<%= @post.id %>"><%= t('views.posts.show.comment') %></button>
  <% else %>
    <p>You need to <%= link_to 'sign in', new_user_session_path %> to comment.</p>
  <% end %>
</div>
