<h1 class="text-xl font-semibold mb-6"><%= t('views.admin.settings.edit_title') %></h1>

<%= form_with model: @setting, url: admin_settings_path, method: :put, class: "space-y-6" do |f| %>
  <div class="space-y-2">
    <%= f.label :remind_after_quantity, t('views.admin.settings.remind_after_quantity'), class: "block text-sm font-medium" %>
    <%= f.number_field :remind_after_quantity, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div class="space-y-2">
    <%= f.label :remind_after_unit, t('views.admin.settings.remind_after_unit'), class: "block text-sm font-medium" %>
    <%= f.select :remind_after_unit, [["Dani", "days"], ["Mjeseci", "months"]], {}, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div class="space-y-2">
    <%= f.label :reminder_email_text, t('views.admin.settings.reminder_email_text'), class: "block text-sm font-medium" %>
    <%= f.text_area :reminder_email_text, rows: 5, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit t('views.admin.settings.save_settings'), class: "px-4 py-2 border rounded" %>
  </div>
<% end %>
