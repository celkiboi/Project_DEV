<h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4"><%= t('views.admin.users.title') %></h1>

<div class="overflow-x-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
  <table class="min-w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300 font-semibold"><%= t('views.admin.users.email') %></th>
        <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300 font-semibold"><%= t('views.admin.users.name') %></th>
        <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300 font-semibold"><%= t('views.admin.users.profile') %></th>
        <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300 font-semibold"><%= t('views.admin.users.posts') %></th>
        <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300 font-semibold"><%= t('views.admin.users.country') %></th>

      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="border-t border-gray-300 dark:border-gray-700">
          <td class="px-4 py-2 text-gray-700 dark:text-gray-300"><%= user.email %></td>
          <td class="px-4 py-2 text-gray-700 dark:text-gray-300"><%= user.name %></td>
          <td class="px-4 py-2">
            <%= link_to t('views.admin.users.view_profile'), admin_user_path(user), class: "text-blue-500 hover:text-blue-700 dark:text-blue-300 dark:hover:text-blue-500" %>
          </td>
          <td class="px-4 py-2">
            <%= link_to t('views.admin.users.view_posts'), posts_admin_user_path(user), class: "text-blue-500 hover:text-blue-700 dark:text-blue-300 dark:hover:text-blue-500" %>
          </td>
          <td class="px-4 py-2 text-gray-700 dark:text-gray-300">
            <%= user.country.present? ? user.country : t('views.admin.users.no_info') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= paginate @users %>
  </div>
</div>
