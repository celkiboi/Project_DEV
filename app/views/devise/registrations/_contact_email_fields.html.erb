<div class="nested-fields mb-4">
  <div class="flex items-center">
    <%= f.label :email, class: "block text-gray-700 dark:text-gray-300 font-medium mr-4" %>
    <%= f.email_field :email, class: "mt-1 p-2 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    <%= f.hidden_field :_destroy %>
    <button type="button" data-action="nested-form#remove" class="ml-4 px-3 py-1 bg-red-500 hover:bg-red-700 text-white font-semibold rounded-md">
      Remove
    </button>
  </div>
</div>
